@model IEnumerable<FlashCards.Models.Status>

@{
    ViewData["Title"] = "Index";
}

<h1>Statuses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @* <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Card)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mentions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsWordTakenForLearning)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsWordLearned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsWordKnownBefore)
            </th>
