@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model FlashCards.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1>@Localizer["lblCreate"]</h1>

<h4>@Localizer["User"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nickName" class="control-label"></label>
                <input asp-for="nickName" class="form-control" />
                <span asp-validation-for="nickName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["lblButton"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["lblBack"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
