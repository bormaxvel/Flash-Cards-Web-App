@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model IEnumerable<FlashCards.Models.userCollectionLink>


@{
    ViewData["Title"] = "Index";
}

<h1>@Localizer["lblTitle"]</h1>

<p>
    <a asp-action="Create">@Localizer["lblCreate"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CollectionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Collection)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CollectionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Collection.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Localizer["lblDetails"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["lblDelete"]</a>
            </td>
        </tr>
}
    </tbody>
</table>
